  "keywords": [],
  "engines": {
    "bun": "1.3.5"
  },
  "scripts": {
    "dev": "NODE_ENV=development bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "test": "echo \"Error: no test specified\" && exit 1",
    "seed": "bun run src/infra/database/prisma/seed/seed.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:reset": "prisma migrate reset",
    "prisma:push": "prisma db push",
    "prisma:push:reset": "prisma db push --force-reset",
    "test-db": "bun scripts/test-db.ts",
    "type-check": "bun --bun tsc --noEmit"
  },
  "dependencies": {
    "@elysiajs/openapi": "^1.4.13",
