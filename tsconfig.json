{
  "compilerOptions": {
    "target": "ES2021",
    "baseUrl": "./",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["bun-types"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
